/*!-----------------------------------*\
    #NORMALIZE
\*------------------------------------*/

article
aside
details
figcaption
figure
footer
header
hgroup
main
nav
section
summary
	display block

audio
canvas
video
	display inline-block
	
audio:not([controls])
	display none
	height 0 

[hidden]
	display none

html
	font-family sans-serif
	text-size-adjust 100%

body
	margin 0

a
	&:focus
		outline this dotted
	&:active
	&:hover
		outline 0
		
h1 
	font-size 2em
	margin 0.67em 0

abbr[title]
	border-bottom 1px solid

b
strong
	font-weight bold

dfn
	font-style italic

hr 
	box-sizing content-box
	height 0
	
mark
	background yellow
	color black

code
kbd
pre
samp
	font-family monospace, serif
	font-size 1em

pre
	white-space pre-wrap

small
	font-size 80%

img
	border none

svg:not(:root)
	overflow hidden
	
figure
	margin 0

/* TODO finish normalize.styl -- form elements */

textarea
	overflow: auto;
	vertical-align: top;

table
	border-collapse collapse
	border-spacing: 0
	

